<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naveen.effervescence">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Effervescence"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:screenOrientation="portrait"
            android:name=".Activities.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.DaysViewActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searcheable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <service
            android:name=".NotificationService"
            android:enabled="true" />
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".Receiver" />

        <activity android:name=".Main2Activity" />
        <activity
            android:name=".Proshows"
            android:label="Proshows"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.ProShows"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.SponsersActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Developers"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Categories"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.EventDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.OrganizersActivity">
        </activity>
        <activity
            android:name=".Activities.Home"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>