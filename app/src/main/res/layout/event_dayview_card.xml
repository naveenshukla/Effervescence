<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android.support.v7.cardview:cardElevation="15dp"
    android.support.v7.cardview:cardCornerRadius="10dp"
    android.support.v7.cardview:cardUseCompatPadding="false"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/main_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/event_image"
            android:scaleType="fitXY"
            android:src="@mipmap/antakshiri"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Event"
            android:padding="5dp"
            android:textSize="25sp"
            android:textColor="@color/md_grey_600"
            android:id="@+id/event_title_tv"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:id="@+id/dropdown" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="bottom"
        android:id="@+id/expanded_layout"
        android:layout_below="@id/main_layout"
        android:visibility="visible"
       >


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:id="@+id/location"
            android:src="@drawable/ic_location_drop_black_24dp"
            android:layout_above="@+id/time"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Activity Center"
            android:textColor="@color/md_grey_600"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:textSize="16sp"
            android:id="@+id/location_tv"
            android:layout_toRightOf="@+id/location"
            android:layout_alignBottom="@+id/location"
            android:layout_alignTop="@+id/location" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:id="@+id/time"
            android:src="@drawable/ic_access_time_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:00 PM"
            android:textColor="@color/md_grey_600"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:textSize="16sp"
            android:id="@+id/time_tv"
            android:layout_alignTop="@+id/time"
            android:layout_toRightOf="@+id/time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/md_grey_600"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border"
            android:id="@+id/category_tv2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/category_tv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/md_grey_600"
            android:textSize="15sp"
            android:padding="5dp"
            android:background="@drawable/border"
            android:id="@+id/category_tv"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_button"
            android.support.design:fabSize="mini"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_share_white"
            />


    </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>