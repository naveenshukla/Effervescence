<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android.support.design="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android.support.v7.cardview:cardElevation="4dp"
    android.support.v7.cardview:cardCornerRadius="4dp"
    android.support.v7.cardview:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/main_layout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/event_image"
            android:transitionName="ima"
            android:scaleType="fitXY"
            android:src="@mipmap/antakshiri"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_image"
            android:id="@+id/dropdown_ll"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sample Event"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:layout_weight="0.9"
                android:textColor="@color/md_black_1000"
                android:id="@+id/event_title_tv" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_expand_more_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/dropdown" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_gravity="bottom"
        android:id="@+id/expanded_layout"
        android:layout_below="@id/main_layout"
        android:visibility="visible"
       >


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/location"
            android:src="@drawable/location_material_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Activity Center"
            android:textColor="@color/md_grey_600"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/location_tv"
            android:layout_toRightOf="@+id/location"
            android:layout_alignBottom="@+id/location"
            android:layout_alignTop="@+id/location" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/time"
            android:src="@drawable/clock_material"
            android:layout_below="@+id/location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:00 PM"
            android:textColor="@color/md_grey_600"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:id="@+id/time_tv"
            android:layout_alignTop="@+id/time"
            android:layout_toRightOf="@+id/time"
            android:layout_alignBottom="@+id/time"
            android:layout_alignRight="@+id/location_tv"
            android:layout_alignEnd="@+id/location_tv"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_button"
            android.support.design:fabSize="mini"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_share_white"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminder_button"
            android.support.design:fabSize="mini"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_access_time_white_24dp"
            android:layout_alignTop="@+id/share_button"
            android:layout_toLeftOf="@+id/share_button" />

        <TextView
            android:text="Literary"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000"
            android:textSize="16sp"
            android:background="@drawable/rounded_corners"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category_tv"
            android:layout_alignRight="@+id/share_button"
            />


    </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>