    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android.support.v7.cardview:cardCornerRadius="4dp"
    android.support.v7.cardview:cardElevation="4dp"
    android.support.v7.cardview:cardUseCompatPadding="true"
    >


    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitXY"
            android:src="@mipmap/antakshiri"
            android:transitionName="ima"/>


        <TextView
            android:id="@+id/event_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/event_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:text="Sample Event"
            android:textColor="@color/md_white_1000"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/time"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/location"
            android:layout_below="@+id/event_image"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/clock_material"/>

        <ImageView
            android:id="@+id/location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/time"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/location_material_icon"/>

